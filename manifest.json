{
  "action": {
    "default_icon": {
      "128": "icons/photosolve128.png",
      "16": "icons/photosolve16.png",
      "48": "icons/photosolve48.png"
    },
    "default_popup": "popup.html",
    "default_title": "PhotoSolve"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "js": ["contentScript.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "description": "The most efficient way to finish assignments. Scan and Solve any questions effortlessly with PhotoSolve powerful AI!",
  "icons": {
    "128": "icons/photosolve128.png",
    "16": "icons/photosolve16.png",
    "48": "icons/photosolve48.png"
  },
  "manifest_version": 3,
  "name": "PhotoSolve - Scan & Solve Any Question",
  "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "4.3.0",
  "web_accessible_resources": [
    {
      "matches": ["*://*/*"],
      "resources": [
        "resources/resourcesDefault5.png",
        "resources/resourcesDefault4.png",
        "resources/resourcesDefault3.png",
        "resources/resourcesDefault2.png",
        "resources/resourcesDefault1.png",
        "icons/x.png",
        "icons/exit.svg",
        "icons/settings.svg",
        "icons/history.svg",
        "icons/arrow.svg",
        "icons/crop.svg",
        "icons/img-pdf.svg",
        "icons/microphone.svg",
        "icons/mic-disabled.svg",
        "icons/pencil-square.svg",
        "icons/check.svg",
        "icons/copy.svg",
        "icons/magnif-glass.svg",
        "icons/send.svg",
        "icons/unlock.svg",
        "icons/scan.svg",
        "icons/scan-blue.svg",
        "icons/arrow-white.svg",
        "icons/thunder.svg",
        "icons/pdf-logo.svg",
        "icons/crop-chatbox.svg",
        "icons/history-chatbox.svg",
        "icons/pdf-chatbox.svg",
        "icons/img-chatbox.svg",
        "icons/uploadfile-chatbox.svg",
        "icons/addconvo-chatbox.svg",
        "icons/discord-icon-svgrepo-com.svg",
        "icons/Close_Grey.png",
        "icons/OCR_Black.png",
        "icons/Edit_Pencil.png",
        "icons/point.svg",
        "fonts/Poppins/Poppins-Medium.ttf",
        "fonts/Varela_Round/VarelaRound-Regular.ttf",
        "fonts/Rubik/Rubik-VariableFont_wght.ttf",
        "logo/logo2x2.png",
        "logo/photosolve-logo-gradient.svg",
        "pages/pro/index.html",
        "appCheck/firebase-app.js",
        "appCheck/firebase-app-check.js",
        "css/stealthMode.css"
      ]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
